FROM openjdk:11

RUN mkdir /opt/app
COPY target/priority-sale-service-*.jar /opt/app/app.jar

ENV KEYCLOAK_TOKEN_URI=${KEYCLOAK_TOKEN_URI}
ENV GATEWAY_URI=${GATEWAY_URI}
ENV PRIORITY_SALE_CLIENT_ID=${PRIORITY_SALE_CLIENT_ID}
ENV PRIORITY_SALE_CLIENT_SECRET=${PRIORITY_SALE_CLIENT_SECRET}

CMD ["java", "-jar", "/opt/app/app.jar"]
